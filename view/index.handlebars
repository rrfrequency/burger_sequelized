<div class = 'row'>
  <div class = 'col-md-12'>
    <div class="jumbotron">
        <h1>Eat-Da-Burger!</h1>
        <p><img id = 'burger' src="assets/img/burger.jpg" alt="Black and white picture of three burgers."</p>
    </div>
  </div>
</div>

<div class = 'container'>
  <div class = 'row' id = 'burger-entry'>
    <div class = 'col-md-12'>
      <form class="new-burger-form">
          <div class="form-group">  
            <label for="user">Enter a burger and submit</label>
            <input type="text" class="form-control input-lg" id="user-input" name="burger_name">  
          </div>
          <div class="row">
              <div class="col-sm-12">
                  <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </div>
      </form>
    </div>
  </div>

  <div class = 'row'>
    <div class = 'col-md-6 burger-holder'>
      <ul class="list-group">
        {{#each burgers}} {{#unless this.devoured}}
        <li class="list-group-item">
          {{this.burger_name}}
        
          
            <button type="submit" class="btn btn-danger eat" data-burgerid="{{this.id}}">Devour It!</button>
         
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>

    <div class = 'col-md-6 burger-holder'>
      <ul class="list-group">
        {{#each burgers}} {{#if this.devoured}}
        <li class="list-group-item">
          {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
      </ul>

    </div>
  </div>
</div>




